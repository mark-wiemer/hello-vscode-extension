{
    "name": "helloworld",
    "displayName": "HelloWorld",
    "version": "0.0.1",
    "description": "",
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "compile": "npm run compile_ts && npm run compile_grammar",
        "compile_grammar": "npx js-yaml syntaxes/abc.tmGrammar.yaml > syntaxes/abc.tmGrammar.json",
        "compile_ts": "tsc -p ./",
        "format": "npm run format_inner -- --check",
        "format_fix": "npm run format_inner -- --write",
        "format_inner": "prettier . ",
        "lint": "npm run quality && npm run format",
        "quality": "npm run quality_inner && echo âœ… No problems",
        "quality_fix": "npm run quality_inner -- --fix",
        "quality_inner": "eslint src --ext ts --max-warnings=0",
        "pretest": "npm run compile",
        "test": "npm run test_unit && npm run test_grammar",
        "test_grammar": "vscode-tmgrammar-snap src/test/suite/grammar/samples/*.abc",
        "test_unit": "node ./out/test/runTest.js",
        "validate": "npm run lint && npm run test",
        "vscode:prepublish": "npm run compile",
        "watch": "tsc -watch -p ./"
    },
    "contributes": {
        "commands": [
            {
                "command": "helloworld.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "helloworld.time",
                "title": "Current time"
            }
        ],
        "grammars": [
            {
                "language": "abc",
                "scopeName": "source.abc",
                "path": "./syntaxes/abc.tmGrammar.json"
            }
        ],
        "languages": [
            {
                "id": "abc",
                "extensions": [
                    ".abc"
                ]
            }
        ]
    },
    "activationEvents": [
        "onCommand:helloworld.helloWorld",
        "onCommand:helloworld.time"
    ],
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.67.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.16.0",
        "glob": "^8.0.3",
        "js-yaml": "^4.1.0",
        "mocha": "^10.0.0",
        "prettier": "2.6.1",
        "typescript": "^4.7.2",
        "vscode-tmgrammar-test": "^0.1.1"
    },
    "engines": {
        "vscode": "^1.67.0"
    }
}
